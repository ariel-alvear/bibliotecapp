<p id="notice"><%= notice %></p>

<h1>Books</h1>

<form method="get" action="<%= books_path %>">
    <div class="input-group">
        <select name="status" class="custom-select col-3" id="inputGroupSelect04">
            <option selected value="">Select book status</option>
            <option value="1">In shelf</option>
            <option value="0">Given</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3 mb-3">Filter</button>
</form>

<table>
  <thead>
    <tr>
      <th><%= sortable "title", "Title" %></th>
      <th>Author</th>
      <th>Status</th>
      <th>Given</th>
      <th>Returned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.given %></td>
        <td><%= book.returned %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= paginate @books %>
  </div>
</div>

